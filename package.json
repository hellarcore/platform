{
  "name": "@hellarpro/platform",
  "version": "2.0.15",
  "private": true,
  "scripts": {
    "setup": "yarn install && yarn run build && yarn run configure",
    "start": "yarn run hellarmate group start --verbose -w",
    "restart": "yarn run hellarmate group restart --verbose",
    "stop": "yarn run hellarmate group stop --verbose",
    "reset": "yarn run clean:data --force && yarn run setup",
    "test": "ultra -r $* test",
    "test:hapi": "ultra -r --filter \"packages/@(hapi|platform-test-suite)\" test",
    "test:hapi-grpc": "ultra -r --filter \"packages/@(hapi|js-hapi-client|hapi-grpc|js-hellar-sdk|js-drive|wallet-lib|platform-test-suite)\" test",
    "test:hellarpay-contract": "ultra -r --filter \"packages/@(hellarpay-contract|js-hellar-sdk|js-drive|js-hapi-client|wasm-hpp|wallet-lib|hapi|platform-test-suite)\" test",
    "test:hpns-contract": "ultra -r --filter \"packages/@(hpns-contract|js-hellar-sdk|js-drive|js-hapi-client|wasm-hpp|wallet-lib|hapi|platform-test-suite)\" test",
    "test:feature-flags-contract": "ultra -r --filter \"packages/@(feature-flags-contract|js-hellar-sdk|js-drive|js-hapi-client|wasm-hpp|wallet-lib|hapi|platform-test-suite)\" test",
    "test:hapi-client": "ultra -r --filter \"packages/@(js-hapi-client|wallet-lib|js-hellar-sdk|platform-test-suite)\" test",
    "test:sdk": "ultra -r --filter \"packages/@(js-hellar-sdk|platform-test-suite)\" test",
    "test:spv": "ultra -r --filter \"packages/@(hellar-spv|js-hapi-client)\" test",
    "test:hpp": "ultra -r test",
    "test:drive": "ultra -r --filter \"packages/@(js-drive|platform-test-suite)\" test",
    "test:grpc-common": "ultra -r --filter \"packages/@(js-grpc-common|hapi-grpc|hapi|js-hapi-client|js-hellar-sdk|js-drive|wallet-lib|platform-test-suite)\" test",
    "test:suite": "yarn workspace @hellarpro/platform-test-suite test",
    "test:suite:browsers": "yarn workspace @hellarpro/platform-test-suite test:browsers",
    "test:wallet-lib": "ultra -r --filter \"packages/@(wallet-lib|js-hellar-sdk|platform-test-suite)\" test",
    "build": "ultra --recursive $* --build",
    "lint": "ultra --recursive $* lint",
    "configure:tests:network": "yarn exec scripts/configure_test_suite_network.sh",
    "configure": "yarn exec ./scripts/configure.sh",
    "clean:data": "yarn run hellarmate group reset --verbose --group=local --hard",
    "clean": "yarn run clean:data && yarn run build",
    "hellarmate": "yarn exec packages/hellarmate/bin/run.js",
    "release": "yarn exec ./scripts/release/release.sh",
    "bench": "yarn workspace @hellarpro/bench-suite bench"
  },
  "packageManager": "yarn@4.0.2",
  "ultra": {
    "concurrent": [
      "clean"
    ]
  },
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "add-stream": "^1.0.0",
    "conventional-changelog": "^3.1.24",
    "conventional-changelog-hellar": "github:hellarpro/conventional-changelog-hellar",
    "semver": "^7.5.3",
    "tempfile": "^3.0.0",
    "ultra-runner": "^3.10.5"
  },
  "workspaces": [
    "packages/js-grpc-common",
    "packages/bench-suite",
    "packages/hapi-grpc",
    "packages/hellarpay-contract",
    "packages/hpns-contract",
    "packages/feature-flags-contract",
    "packages/js-hapi-client",
    "packages/wallet-lib",
    "packages/js-hellar-sdk",
    "packages/hapi",
    "packages/hellarmate",
    "packages/platform-test-suite",
    "packages/masternode-reward-shares-contract",
    "packages/hellar-spv",
    "packages/wasm-hpp",
    "packages/withdrawals-contract"
  ],
  "resolutions": {
    "elliptic": "^6.5.4",
    "bn.js": "4.12.0",
    "ejs": "^3.1.7",
    "fast-json-patch": "^3.1.1",
    "oclif@3.4.2": "patch:oclif@npm:3.4.2#.yarn/patches/oclif-npm-3.4.2-a655d32eed.patch",
    "qs": "^6.7.3",
    "engine.io": "^6.4.2",
    "ua-parser-js": "^1.0.33",
    "dns-packet": "^5.4.0",
    "cpu-features": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.2.1.tgz",
    "socket.io-parser": "^4.2.3",
    "semver": "^7.5.3",
    "word-wrap": "^1.2.4",
    "protobufjs": "^6.11.4",
    "browserify-sign": "4.2.2",
    "istanbul-lib-processinfo": "2.0.3",
    "@babel/core": "7.23.3",
    "tsconfig-paths": "4.2.0",
    "ansi-regex": "5.0.1",
    "cacache": "18.0.0",
    "node-gyp": "10.0.1"
  },
  "dependencies": {
    "node-gyp": "^10.0.1"
  }
}
